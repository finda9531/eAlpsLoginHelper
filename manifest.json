{
  "manifest_version": 3,
  "name": "eALPS Login Helper",
  "version": "1.0",
  "description": "信州大学のeALPSログイン画面において、ID入力などの操作を補助するためのツールです。",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://gakunin.ealps.shinshu-u.ac.jp/idp/Authn/External*"
      ],
      "js": [
        "script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}